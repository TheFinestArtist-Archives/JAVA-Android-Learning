<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View style="@style/list_cell_divider" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.pinterest.ui.text.PTextView android:id="@id/repin_count_tv" android:visibility="gone" android:drawableLeft="@drawable/ic_repin_small" style="@style/pin_description_counts" />
        <com.pinterest.ui.text.PTextView android:id="@id/like_count_tv" android:visibility="gone" android:drawableLeft="@drawable/ic_like_small" style="@style/pin_description_counts" />
        <com.pinterest.ui.text.PTextView android:id="@id/comment_count_tv" android:drawableLeft="@drawable/ic_comment_small" style="@style/pin_description_counts" />
    </LinearLayout>
</LinearLayout>